{
  "name": "Freeze DOM",
  "version": "0.0.1",
  "description": "Freeze the DOM instantly",
  "manifest_version": 3,
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "commands": {
    "freeze-dom": {
        "suggested_key": "Ctrl+Shift+S",
        "description": "Freeze the DOM instantly"
      }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
