{
  "name": "Freeze DOM",
  "version": "1.0.0",
  "description": "Freeze the DOM instantly to inspect tricky HTML/CSS areas",
  "manifest_version": 3,
  "permissions": ["contextMenus", "scripting", "activeTab", "storage"],
  "host_permissions": ["https://api.lemonsqueezy.com/*"],
  "commands": {
    "freeze-dom": {
      "suggested_key": "Ctrl+Shift+S",
      "description": "Freeze the DOM instantly"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
